    enabled: Boolean
}

type FaqQALanguage {
    question: String!
    answer: String!
    language: String!
}

input FaqCategoryNameInput{
    position: Int!
    name: String!
    language: String!
    enabled: Boolean
}

input FaqQAInput{
    categoryId: Int!
    position: Int!
    question: String!
    answer: String!
    language: String!
    enabled: Boolean
}

input FaqDeleteInput{
    id: ID!
