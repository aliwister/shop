type Subscription {
    getProductBySku(sku: String, isParent: Boolean = false, _locale: String):Attribute!
}
enum Condition {
  NEW
  LIKE_NEW
  VERY_GOOD
  GOOD
  FAIR
}

enum VariationType {
    SIMPLE
    CHILD
    PARENT
}


enum ProductGroup {
    BAGS
    ART
    BEAUTY
    BEDDINGS
    BOOKS
    CAMERA
    AUTO
    FASHION
    ELECTRONICS
    HEALTH
    MUSIC
    PC
    SPORTS
    TOOLS
    TOYS
    WATCHES
}

